<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mini_check_or_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/miniGoalImgCheckBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/checkbox_on_background" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/miniGoalProgressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:style="solid_line" />
    </LinearLayout>


    <TextView
        android:id="@+id/miniGoalContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="물 마시기"
        app:layout_constraintStart_toEndOf="@+id/mini_check_or_progress"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/miniGoalSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350ml"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>