<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alert_white_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/buttonClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:clickable="true"
            app:srcCompat="@drawable/ic_close_black"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 : "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextGoalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tagLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerHighlight">

            <Spinner
                android:id="@+id/spinnerHighlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tooltipText="하이라이트" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태그 : "
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/editTextTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:completionThreshold="3"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repeatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/weekdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="반복일자"
                    android:textSize="18sp" />

                <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                    android:id="@+id/groupChoicesWeekday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tbgChildSpacing="auto">

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일" />

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월" />

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화" />

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수" />

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목" />

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금" />

                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/staurday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토" />

                </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작시간"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewGoalStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="TouchMe!"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종료시간"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewGoalEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="TouchMe!"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="카운트 횟수"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="count : "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextNumberSigned"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberSigned|number" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="단위 : "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextNumberSigned2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="15dp">

            <TextView
                android:id="@+id/mapTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="위치 설정"
                android:textSize="18sp" />

            <fragment
                android:id="@+id/mapFinder"
                android:name="com.example.rouminder.fragments.MapsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapTextView" />

            <TextView
                android:id="@+id/selected_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mapFinder"
                android:text="장소를 선택해 주세요." />

        </RelativeLayout>

        <LinearLayout
            android:id="@id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시작 시간 : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewStartTimeFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:onClick="onDateClicked"
                    android:text="TextView"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewStartTimeBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onTimeClicked"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="마감 시간 : "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewEndTimeFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:onClick="onDateClicked"
                    android:text="TextView"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewEndTimeBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onTimeClicked"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/buttonGoalModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:background="@color/purple_500"
        android:paddingVertical="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:clickable="true"/>

</LinearLayout>